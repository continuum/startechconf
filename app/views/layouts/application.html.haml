!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:name=>"viewport", :content=>"width=device-width, initial-scale=1, maximum-scale=1"}
    %meta{:property => "Title", :content => t("sitename") + " " + t("year")}
    %meta{:property => "Site Name", :content => t("sitename")}
    %meta{:property => "Url", :content=>"http://startechconf.com"}
    %meta{:property => "Description", :content => "48 horas y la conferencia de tecnología más grande de Chile"}
    %title
      = t("sitename")
      = t("year")
    %link{:rel => "icon", :type => "image/png", :href => "/favicon.png"}
    %link{:href => "http://roboto-webfont.googlecode.com/svn/trunk/roboto.all.css", :rel => "stylesheet", :type => "text/css"}
    = stylesheet_link_tag "application", media: "all"
    = stylesheet_link_tag '//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css'
    = javascript_include_tag "application"
    /[if lt IE 9]
      <link rel="stylesheet" type="text/css" href="css/fallback.css" />
    = analytics_init if Rails.env.production?
    = yield :head

  %body
    = include_facebook_js_sdk
    = yield
    %footer
      .container
        %nav
          %ul
            %li
              %a{:href => "mailto:contact@startechconf.com"}
                Email us:
                %strong contact@startechconf.com
        .social-links
          %a{:href => "https://www.facebook.com/StarTechConf?fref=ts", :title => "Facebook", :class => "facebook", :target => "_blank"}
            %b Facebook
          %a{:href => "http://twitter.com/startechconf", :title => "Twitter", :class => "twitter", :target => "_blank"}
            %b Twitter
          %a{:href => "http://feeds.feedburner.com/startechconf", :title => "RSS", :class => "rss", :target => "_blank"}
            %b RSS
