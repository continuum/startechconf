%section.counter
  .container
    .preform
      - if @preregistro && !@preregistro.errors.any?
        %p
          = t(:we_are)
          %span= "%03d" % Preregistro.count
        .call-to
          %a.button
            = raw t(:pre_register_thanks)
          %span
            = t(:we_contact_you)
      - else
        %p
          = t(:we_are)
          %span= "%03d" % Preregistro.count
        .call-to
          %a.button#register-button{:href => "#", :title => "Pre-RegÃ­strate"}
            = t(:preregister)
          %span
            = t(:discount)
    .register-form{:style => (@preregistro && @preregistro.errors.any?) ? "" : "display:none"}
      %form{:action => preregister_path, :method => :post}
        .fields
          %input#mail{:type => "email", :name => "mail", :placeholder => "mail@mail.com", :value => @preregistro.try(:mail) }
        %a{:href => "#", :class => "button", :title => "Enviar tus datos"}
          Enviar
        %span.error= "mail #{@preregistro.errors[:mail].join(',')}" if @preregistro && @preregistro.errors.any?