%header.title
  %h2
    = t(:collaborators)
%p= t(:thanks)

- t(:confirmed_speakers).each do |speaker|

  .person
    %figure.photo
      .shadow
      = image_tag speaker["photo"]
    %span.name
      = speaker["name"]
    %span.occupation
      = speaker["occupation"]
    %span.contact
      = raw speaker["contact"]


- (6 - t(:confirmed_speakers).count).times do
  .person
    %figure.photo
      .shadow
      = image_tag "default.png"
    %span.name
      = t(:to_be_announced)
    %span.occupation
      &nbsp;
    %span.contact
      %a{:href=>"javascript:;", :title=>""}
        &nbsp;
