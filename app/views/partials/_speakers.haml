%header.title#speakers
  %h2
    = t(:speakers)
%p= t(:stars)

%p#propose-a-talk= link_to t(:propose_a_talk), "http://startechconf.wufoo.com/forms/startechconf-propuesta-de-charla-talk-proposal/"

- t(:confirmed_speakers).each do |speaker|

  .person
    %figure.photo
      .shadow
      = image_tag speaker["photo"]
    %span.name
      = speaker["name"]
    %span.occupation
      = speaker["occupation"]
    %span.contact
      = raw speaker["contact"]


- (6 - t(:confirmed_speakers).count).times do
  .person
    %figure.photo
      .shadow
      = image_tag "default.png"
    %span.name
      = t(:to_be_announced)
    %span.occupation
      &nbsp;
    %span.contact
      %a{:href=>"javascript:;", :title=>""}
        &nbsp;
